{
  "name": "uiconverter",
  "workspaces": [
    "apps/*",
    "packages/*",
    "configs/*"
  ],
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@uiconverter/eslint-config-ts": "workspace:*",
    "@uiconverter/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.4",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.7.0"
  }
}
